<html>
  <head>
    <title>Ramaze Wiki</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="Content-Language" content="en">

    <link rel="stylesheet" type="text/css" href="/css/screen.css" />
    <link rel="stylesheet" type="text/css" href="/css/coderay.css" />
    <% if uv_style = session[:uv_style] %>
      <link rel="stylesheet" type="text/css" href="/css/<%= uv_style %>.css" />
    <% end %>
  </head>
  <body>
    <div class="head">
      <div class="title">
        <a href="/Home" alt="Home"><img src="/logo.png" alt="Ramaze Wiki" /></a>
      </div>
      <div class="menu">
        <div class="locale">
          <%= Pages.a('English', 'language/en') %>
          <%= Pages.a('Deutsch', 'language/de') %>
          <%= Pages.a('日本語', 'language/ja') %>
        </div>
        <a href="http://ramaze.net">Ramaze</a>
        <%= Pages.a('List pages', :list) %>
        <%= Pages.a('Random page', :random) %>
        <% if logged_in? %>
          <%= Auth.a('Log out', :logout) %>
        <% else %>
          <%= Auth.a('Log in', :login) %>
        <% end %>
      </div>
    </div>
    <div class="content">
      <%= @content %>
    </div>
    <div class="footer">
      <div class="copy">
        <a rel="license" href="http://creativecommons.org/licenses/by-sa/2.1/jp/">
          <img alt="Creative Commons License" src="http://i.creativecommons.org/l/by-sa/2.1/jp/88x31.png" />
        </a>
        <br />
        <span href="http://purl.org/dc/dcmitype/Text" xmlns:dc="http://purl.org/dc/elements/1.1" property="dc:title" rel="dc:type">Ramaze Wiki</span>
        by
        <a href="http://wiki.ramaze.net" xmlns:cc="http://creativecommons.org/ns#" property="cc:attributionName" rel="cc:attributionURL">Michael Fellinger</a>
        is licensed under a
        <a href="http://creativecommons.org/licenses/by-sa/2.1/jp/" rel="license">Creative Commons Attributions-Share Alike 2.1 Japan License</a>
        .
      </div>
    </div>
  </body>
</html>
